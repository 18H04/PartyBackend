@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using ESEIM.Utils;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link rel="shortcut icon" href="~/swork.ico" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/lib/robust/css/bootstrap.css">
    <link href="/lib/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet"
          type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/front-end/site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/18.1.42/material.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.9/angular.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/robust/core/libraries/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/robust/vendors/js/ui/unison.min.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/bootstrap/js/bootstrap.min.js"></script>
    @*Angularjs v1.7.9*@
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular-resource.min.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular-route.min.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular-cookies.min.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular-sanitize.min.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular-touch.min.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular-animate.min.js" type="text/javascript"></script>
    <script src="/lib/assets/global/plugins/angularjs/plugins/angular-ui-router.min.js"></script>
    <script src="/lib/assets/global/plugins/angularjs/plugins/ocLazyLoad.min.js"></script>
    <script src="/lib/assets/global/plugins/angularjs/plugins/ui-bootstrap-tpls.min.js"></script>
    <script src="~/lib/assets/global/plugins/angular-translate/angular-cookies.js"></script>
    <script src="~/lib/assets/global/plugins/angular-translate/2.1.8/angular-translate.js"></script>
    <script src="~/lib/assets/global/plugins/angular-translate/2.1.8/angular-translate-interpolation-messageformat.js"></script>
    <script src="~/lib/assets/global/plugins/angular-translate/2.1.8/angular-translate-storage-cookie.js"></script>
    <script src="~/lib/assets/global/plugins/angular-translate/2.1.8/angular-translate-storage-local.js"></script>
    <script src="~/lib/assets/global/plugins/angular-translate/2.1.8/angular-translate-loader-url.js"></script>
    @*Angularjs v1.7.9*@

    <script src="https://cdn.syncfusion.com/ej2/18.1.42/dist/ej2.min.js"></script>
    <script src="/lib/assets/global/plugins/jquery-validation/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/lib/assets/global/plugins/jquery-validation/angular-validate.min.js" type="text/javascript"></script>
    @RenderSection("plugin_style", false)
    @RenderSection("plugin_script", false)
    @RenderSection("Styles", required: false)
</head>
<body class="vertical-layout vertical-menu 2-columns  fixed-navbar">

    @await Html.PartialAsync("_Partial_Header")
    <div class="row">
        <div class="container-fluid" style="padding-right: 0">
            <div class="content-wrapper">
                <div class="header-nav" style="margin-left: 0rem">
                    <div class="container d-flex flex-row">
                        <div style="padding: 0.5rem 1rem 0; background-color: #e11703;">
                            <i class="fa fa-home " aria-hidden="true" style="font-size: 3rem; color: white"></i>
                        </div>
                        <div class="Dropdown" style="padding: 1rem 3rem 0.5rem">
                            Trang chủ
                        </div>

                        <div class="Dropdown" style="padding: 1rem 3rem 0.5rem">
                            Giới thiệu
                        </div>

                        <div class="Dropdown" style="padding: 1rem 3rem 0.5rem">
                            Hướng dẫn nghiệp vụ
                        </div>

                        <div class="Dropdown" style="padding: 1rem 3rem 0.5rem">
                            Thông tin cơ sở
                        </div>

                        <div class="Dropdown" style="padding: 1rem 3rem 0.5rem">
                            Hỏi đáp
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            var userSession = HttpContextAccessor.HttpContext.Session.Get<SessionUserLogin>("UserSession");

                            <div class="" style="padding-right: 30px;text-align: center;">
                                <a><img src="@userSession.Picture" style="widtd:70px;height:70px;border-radius:50%" /></a>
                                <div>@userSession.FullName</div>
                            </div>
                        }
                        else
                        {
                            //nút đăng nhập đăng ký
                            <div class="ms-2" style="padding-right: 30px;text-align: center; color: white">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false" style="background-color: transparent; color:white; border: none">
                                        Tài khoản
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li><a class="dropdown-item fs-4" asp-controller="UserProfile" asp-action="Login">Đăng nhập</a></li>
                                        <li><a class="dropdown-item fs-4" asp-controller="UserProfile" asp-action="Register">Đăng ký</a></li>
                                    </ul>
                                </div>
                            </div>
                        }

                        
                    </div>
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_Partial_Footer")
</body>
</html>

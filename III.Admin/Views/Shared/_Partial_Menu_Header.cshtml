@using ESEIM.Utils;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<div class="header-nav" style="margin-left: 0rem">
    <div class="container d-flex flex-row">
        <div class="ms-2 item-menu" style="" id="Home">
            <a class="nav-link" asp-controller="Home" asp-action="Index">
                <i class="fa fa-home icon"></i>
            </a>
        </div>
        <div class="ms-2 item-menu" id="Help">
            <a class="nav-link" href="#">
                <span>PHẢN ÁNH KIẾN NGHỊ</span>
            </a>
        </div>

        <div class="ms-2 item-menu" id="Help">
            <a class="nav-link" href="#">
                <span>THỦ TỤC HÀNH CHÍNH</span>
            </a>
        </div>

        <div class="ms-2 item-menu" id="Help">
            <a class="nav-link" href="#">
                <span>HỖ TRỢ</span>
            </a>
        </div>

        @if (!User.Identity.IsAuthenticated)
        {
            //nút đăng nhập đăng ký
            <div class="ms-2 item-menu" style="padding-right: 30px;text-align: center; color: white">
                <a class="nav-link" href="#">
                    <span>TÀI KHOẢN</span>
                </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item fs-4" asp-controller="UserProfile" asp-action="Login">Đăng nhập</a></li>
                        <li><a class="dropdown-item fs-4" asp-controller="UserProfile" asp-action="Register">Đăng ký</a></li>
                    </ul>
            </div>
        }else{
            var userSession = HttpContextAccessor.HttpContext.Session.Get<SessionUserLogin>("UserSession");
            <div class="ms-2 item-menu" style="padding-right: 30px;text-align: center; color: white">
                <a class="nav-link" href="#">
                        <span>@userSession.FullName</span>
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item fs-4" asp-controller="UserProfile" asp-action="Logout">Đăng xuất</a></li>
                        <li><a class="dropdown-item fs-4" asp-controller="UserProfile" asp-action="Index">Thông tin cá nhân</a></li>
                        <li><a class="dropdown-item fs-4" asp-controller="UserProfile" asp-action="Register">Lý lịch đảng viên</a></li>
                </ul>
            </div>
        }

    </div>

</div>
<style>
    .item-menu {
        position: relative;
        display: inline-block;
    }

    /* Style for the dropdown links */
    .nav-link {
        padding: 10px;
        text-decoration: none;
        color: black;
        display: block;
    }
    /* Style for the dropdown menu */
    .dropdown-menu {
        display: none;
        position: absolute;
        background-color: #dadce0;
        min-width: 160px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }
    /* Style for the dropdown items */
    .dropdown-item {
        color: black;
        padding: 10px;
        text-decoration: none;
        display: block;
    }

    /* Show the dropdown menu on hover */
    .item-menu:hover .dropdown-menu {
        display: block;
    }
</style>
